<% agent = request.user_agent %>
<% if agent =~ /Mobile/ %>
  <div class="navbar-mobile">
      <i class="fa-solid fa-bars menu-mobile"></i>
      <%= image_tag "logo.png", class: "logo-mobile" %>
      <%= image_tag "carito_location_mail_whp/Icono_Carrito.png", class: "carrito" %>
    </div>
   <% else %>
  <div class="navbar">
  <div class="container">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "logo" %>
    <% end %>

    <div class="navbar-flex">
      <%= link_to "Inicio", root_path %>
      <%= link_to "Productos", "#" %>
      <%= link_to "Quienes somos", quienes_somos_path %>
      <%= link_to "Contacto", "#" %>
      <%= link_to "Preguntas Frequentes", "#" %>
      <%= image_tag "carito_location_mail_whp/Icono_Carrito.png", class: "carrito" %>
    </div>
  </div>
</div>
<% end %>
