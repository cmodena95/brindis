      <%= link_to "Preguntas Frequentes", "https://brindisespumante.com.ar/preguntas-frecuentes/" %>
      <%= link_to "https://brindisespumante.com.ar/checkout/v3/start/1220615424/65085d14039d9f81b8190a8341f44bab4d8452af?from_store=1" do %>
        <%= image_tag "carito_location_mail_whp/Icono_Carrito.png", class: "carrito" %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
